# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/aitodo?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-with-openssl-rand-base64-32"

# OpenAI API (required for transcription and classification)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4o-mini" # or "gpt-4o", "gpt-4-turbo", etc.

# Google OAuth (optional - for Google sign in)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email (optional - for sending digest emails via Resend)
# RESEND_API_KEY="re_your-resend-api-key"
# DIGEST_FROM_EMAIL="Todo App <noreply@yourdomain.com>"

# Digest Settings
DIGEST_TIMEZONE="America/Los_Angeles"

# Cron Secret (for scheduled digest - generate a random string)
CRON_SECRET="your-cron-secret-here-generate-with-openssl-rand-base64-32"

# Feature Flags (optional)
# NEXT_PUBLIC_HAS_GOOGLE_AUTH="true"

# Copy this file to .env and fill in your values:
# cp env.example .env

