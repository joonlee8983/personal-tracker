{
  "name": "personal-todo-app",
  "version": "0.1.0",
  "private": true,
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.2",
      "@types/react-dom": "^19.0.2"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@todo/web",
    "dev:mobile": "turbo dev --filter=@todo/mobile",
    "build": "turbo build",
    "lint": "turbo lint",
    "db:generate": "turbo db:generate --filter=@todo/web",
    "db:push": "turbo db:push --filter=@todo/web",
    "db:migrate": "turbo db:migrate --filter=@todo/web",
    "db:studio": "pnpm --filter @todo/web db:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
